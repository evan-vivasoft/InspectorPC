<?xml version="1.0" encoding="utf-8" ?>
<ConfigurationFile>
  <Settings Section="APPLICATION">
    <Setting name="XsdFilesPath" Value="XSD\"/> <!-- Defines the path where the XSD files can be found. Default: XSD\-->
    <Setting name="XmlFilesPath" Value="XML\"/> <!-- Defines the path where the XML files can be found. Default: XML\-->
    <Setting name="TemporaryFilesPath" Value="TEMP\"/> <!-- Defines the path where the Temporary files are stored. Default: TEMP\-->
    <Setting name="MeasurementFilesPath" Value="Measurements\" /> <!-- Defines the path where the measurements are stored. Default: Measurements\ -->
    <Setting name="MeasurementFileWriteEnabled" Value="true" /> <!-- Defines if writing to a measurement file is enabled. Default: true -->
    <Setting name="MeasurementFileWriteInterval" Value="5000" /> <!-- Defines the interval the measurements are written to the measurement file in ms. Default: 5000 ms -->
    <Setting name="MeasurementFileExtenstion" Value="fpr" /> <!-- Defines the file extension for the measurement file. Default: fpr -->
    <Setting name="MeasurementCommandDelay" Value="750" /> <!-- Defines the delay that is added to a timed measurement for compensation on the command delay on the manometers. Default (and minimum): 750 ms-->
  </Settings>
  <Settings Section="PLEXOR">
    <Setting name="DTR" Value="Low"/> <!-- Low => TH1 = 0 and TH2 = 1; High => TH1 = 1 and TH2 = 0 -->
    <Setting name="InitializationLedAddress" Value="626"/> <!-- The address of the Initialization Led. -->
    <Setting name="BluetoothApi" Value="baBlueSoleil" /> <!-- The following API's are supported baBlueSoleil, baMicrosoft, baToshiba, baWidComm-->
    <Setting name="BluetoothDestinationAddress" Value="(00:80:98:C4:21:13)" /> <!-- Format: (xx:xx:xx:xx:xx:xx) -->
    <Setting name="ConnectTimeout" Value="15000" /> <!-- The connect timeout in ms. Default 15000 ms -->
    <Setting name="ConnectRetries" Value="3" /> <!-- The number of retries allowed for connect. Default 3 -->
    <Setting name="MeasurementRetries" Value="3" /> <!-- The number of retries allowed for a continuous measurement. Default 3 -->
    <Setting name="FlushManometerCacheTimeout" Value="3000" /> <!-- The Flush manometer Cache timeout in ms. Default 3000 ms -->
    <Setting name="FlushManometerCacheRetries" Value="3" /> <!-- The number of retries allowed for flush manometer cache. Default 3 -->
    <Setting name="ManometerCommandTimeout" Value="3000" /> <!-- The manometer command timeout in ms. Default 3000 ms -->
    <Setting name="ManometerCommandRetries" Value="3" /> <!-- The Manometer command retries. Default 3 -->
    <Setting name="MeasurementTimeout" Value="3000" /> <!-- The timeout for a measurement in ms. Default 3000 ms -->
    <Setting name="MeasurementInterval" Value="1000" /> <!-- The interval the measurements are gathered and sent in ms. Default 1000ms -->
    <Setting name="WakeUpInterval" Value="60000"/> <!-- The interval in ms for which wake up calls are performed. Default 60000ms -->
    <Setting name="CommandInterval" Value="50"/><!-- The interval in ms between any two consecutive commands to the Plexor -->
    <Setting name="BluetoothDongleAddress" Value="(00:1B:DC:0F:4D:DF)" />
    <Setting name="UseChecksum" Value="true" /> <!-- Whether we use a checksum to check received data -->
  </Settings>
  <Settings Section="MANOMETER_TH1">
    <Setting name="Unit" Value="mbar"/> <!-- Overrides the value read from device -->
    <Setting name="BatteryLimit" Value="75"/> <!-- Battery limit, as integer -->
  </Settings>
  <Settings Section="MANOMETER_TH2">
    <Setting name="Unit" Value="bar"/> <!-- Overrides the value read from device -->
    <Setting name="BatteryLimit" Value="75"/> <!-- Battery limit, as integer -->
  </Settings>
</ConfigurationFile>